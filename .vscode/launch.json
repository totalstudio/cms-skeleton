    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug CakePHP",
            "type": "php",
            "request": "launch",
            "program": "${workspaceRoot}/bin/cake.php",
            "args": ["server"],
            "externalConsole": false,
            "port": 9003,
            "serverReadyAction": {
                "action": "openExternally"
            }
        },
        {
            "name": "Launch CakePHP",
            "type": "php",
            "request": "launch",
            "program": "${workspaceRoot}/bin/cake.php",
            "args": ["server"],
            "externalConsole": false,
            "noDebug": true,
            "serverReadyAction": {
                "action": "openExternally"
            }
        },
        {
            "name": "Listen for Xdebug",
            "type": "php",
            "request": "launch",
            "port": 9003
        }
    ]
}